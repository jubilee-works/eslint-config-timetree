{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:js-lib"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:monthly"
    ],
    "labels": ["dev"]
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true,
      "labels": ["dev"]
    }
  ]
}
