{
  "name": "monorepo",
  "private": true,
  "workspaces": ["packages/eslint-config-timetree", "packages/tests"],
  "scripts": {
    "lint": "yarn lint:eslint-config-timetree && yarn lint:tests",
    "lint:eslint-config-timetree": "yarn --cwd packages/eslint-config-timetree lint",
    "lint:tests": "yarn --cwd packages/tests lint",
    "build": "yarn --cwd packages/eslint-config-timetree build",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "commitizen": "4.2.4",
    "husky": "8.0.1"
  }
}
